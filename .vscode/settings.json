{
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "%DOC%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "Compile with XeLaTeX",
            "tools": ["xelatex",
            "biber",
            "xelatex",
            "xelatex"]
        },
        {
            "name": "Compile with LuaLaTeX",
            "tools": ["lualatex"]
        }
    ],
    "latex-workshop.latex.recipe.default": "Compile with XeLaTeX",
    "latex-workshop.view.pdf.viewer": "tab" // Configura cómo se muestra el PDF (en una pestaña o visor externo)
}
